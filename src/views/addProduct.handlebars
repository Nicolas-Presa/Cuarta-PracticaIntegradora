<h1> Agregar tu producto aqui </h1>

<form action="/api/products" method="post" class="form__addProduct" enctype="multipart/form-data">
    <label for="">titulo:</label>
    <input type="text" name="title" placeholder="Nombre del producto aqui">

    <label for="">Descripcion:</label>
    <input type="text" name="description" placeholder="Descripcion...">

    <label for="">Codigo:</label>
    <input type="text" name="code">

    <label for="">Precio:</label>
    <input type="number" name="price" placeholder="$">

    <label for="">Stock:</label>
    <input type="number" name="stock">

    <label for="">Categoria:</label>
    <input type="text" name="category">

    <label for="">Imagen:</label>
    <input type="file" name="thumbnails">

    <label for="">Email:</label>
    <input type="email" name="owner">
    
    <button type="submit">Agregar Producto</button>
</form>